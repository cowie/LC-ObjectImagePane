<aura:component implements="flexipage:availableForRecordHome, force:hasRecordId, force:hasSObjectName">
    <aura:attribute name="imgMaxHeight" type="Integer"/>
    <aura:attribute name="imgMaxWidth" type="Integer"/>

    <lightning:card title="Record Image">
        <lightning:fileUpload label="Upload Image"
            name="imageUploader"
            multiple="false"
            recordId="{!v.recordId}"
            onuploadfinished="{!c.handleImageUpload}"/>
    </lightning:card>
</aura:component>	
